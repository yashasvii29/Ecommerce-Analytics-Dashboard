<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/other.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Orders Analytics</title>
</head>


<body>
    <div class="upper"></div>
    <div class="lower"></div>

    <header>
        <img class="dash" src="./images/speedometer.png" height="40px" width="40px" alt="">
        <h3>AmatShop</h3>
        <div class="pageLinks">
            <a href="/">Dashboard</a>
            <a href="/products">Products</a>
            <a href="" class="active">Orders</a>
            <a href="/customers">Customers</a>
            <!-- <a href="/sales">Sales</a> -->
        </div>
        <div class="user">
            <img src="../public/images/user.png" alt="u">
        </div>
    </header>

    <main>
        <div class="boxes">
            <div class="box">
                <h5>Total Revenue</h5>
                <h4>$<%= totalRevenue%></h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            <div class="box">
                <h5>Orders Paid</h5>
                <h4>$<%= totalPaidOrders%></h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            <div class="box">
                <h5>Net Profit</h5>
                <h4><%= profitLoss%>%</h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            <div class="box">
                <h5>Avg. Order Value</h5>
                <h4>$<%= avgOrderValue %> </h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            <div class="box">
                <h5>Discounts</h5>
                <h4><%=totalDiscountApplied%>%</h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            <div class="box">
                <h5>Refund</h5>
                <h4>$<%= refundedAmount%></h4>
                <!-- <h6>Profit %</h6> -->
            </div>
            
        </div>

        <div class="graph">
            <h2>Graph of order</h2>
            <canvas id="ecommerceChart"></canvas>
        </div>
    
        <script>
            var ctx = document.getElementById('ecommerceChart').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    datasets: [{
                        label: 'Orders',
                        backgroundColor: ['violet','violet','violet'], // Red color for order line
                        borderColor: ['blue','blue','blue'],
                        borderWidth: 2,
                        data: Array(12).fill(0) // Initialize with 0 orders for each month
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
    
            // Function to update chart data
            function updateChart() {
                // Fetch new data for orders (replace with your actual data fetching logic)
                var newOrdersData = Array.from({ length: 12 }, () => Math.floor(Math.random() * 500)); // Sample new orders data for each month
    
                // Update chart data for orders
                myChart.data.datasets[0].data = newOrdersData;
                myChart.update();
            }
    
            // Update chart data every 5 seconds
            setInterval(updateChart, 5000); // Change interval as needed
        </script>
        </script>
    </main>
</body>
<script src="/js/dataGenerator.js"></script>
</html>